{
    "name": "billythekid/conditional-fields",
    "description": "Show or hide fields based on the value of other fields.",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "conditional fields"
    ],
    "support": {
        "docs": "https://github.com/billythekid/conditional-fields/blob/master/README.md",
        "issues": "https://github.com/billythekid/conditional-fields/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Billy Fagan",
            "homepage": "https://billyfagan.co.uk"
        }
    ],
    "require": {
        "craftcms/cms": "^3.0.0-RC1",
        "codeonyii/yii2-at-least-validator": "^1.2"
    },
    "autoload": {
        "psr-4": {
          "billythekid\\conditionalfields\\": "src/"
        }
    },
    "extra": {
        "name": "Conditional Fields",
        "handle": "conditional-fields",
        "hasCpSettings": false,
        "hasCpSection": false,
        "changelogUrl": "https://raw.githubusercontent.com/billythekid/conditional-fields/master/CHANGELOG.md",
        "class": "billythekid\\conditionalfields\\ConditionalFields"
    }
}
